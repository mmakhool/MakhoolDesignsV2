{
  "name": "@makhool-designs/backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "rimraf dist && nest build",
    "dev": "concurrently -k -n \"api,web\" -c \"yellow.dim,magenta.dim\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run db:ensure && cross-env NODE_ENV=development nest start --watch --preserveWatchOutput",
    "dev:debug": "concurrently -k -n \"api,web\" -c \"yellow.dim,magenta.dim\" \"npm run dev:debug:backend\" \"npm run dev:frontend\"",
    "dev:debug:backend": "npm run db:ensure && cross-env NODE_ENV=development nest start --debug --watch --preserveWatchOutput",
    "dev:frontend": "cd ../web && rushx dev",
    "db:ensure": "cd ../.. && docker-compose up -d",
    "db:stop": "cd ../.. && docker-compose down",
    "db:logs": "cd ../.. && docker-compose logs postgres",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "mikro-orm": "mikro-orm",
    "nest": "nest",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/config": "^3.3.0",
    "@nestjs/swagger": "^7.4.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nodemailer": "^6.9.8",
    "uuid": "^9.0.0",
    "@mikro-orm/cli": "^6.1.12",
    "@mikro-orm/core": "^6.1.12",
    "@mikro-orm/nestjs": "^6.0.2",
    "@mikro-orm/postgresql": "^6.1.12",
    "@mikro-orm/migrations": "^6.1.12",
    "@makhool-designs/shared": "workspace:*",
    "@makhool-designs/database": "workspace:*",
    "@nestjs/jwt": "~11.0.0",
    "@nestjs/passport": "~11.0.5",
    "@types/bcryptjs": "~3.0.0",
    "@types/passport-jwt": "~4.0.1",
    "@types/passport-local": "~1.0.38",
    "bcryptjs": "~3.0.2",
    "passport": "~0.7.0",
    "passport-jwt": "~4.0.1",
    "passport-local": "~1.0.0",
    "@nestjs/schedule": "~6.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "tsConfigPath": "./tsconfig.mikro-orm.json",
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
