{
  "name": "@makhool-designs/database",
  "version": "1.0.0",
  "description": "Database schemas and migrations for MakhoolDesigns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.1.12",
    "@mikro-orm/core": "^6.1.12",
    "@mikro-orm/postgresql": "^6.1.12",
    "@mikro-orm/migrations": "^6.1.12",
    "@mikro-orm/reflection": "^6.1.12",
    "@makhool-designs/shared": "workspace:*",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.4.3",
    "@types/node": "^18.16.1",
    "@types/uuid": "^9.0.0"
  }
}
