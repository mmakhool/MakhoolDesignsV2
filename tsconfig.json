{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@makhool-designs/shared": ["./packages/shared/src/index.ts"],
      "@makhool-designs/shared/*": ["./packages/shared/src/*"],
      "@makhool-designs/database": ["./packages/database/src/index.ts"],
      "@makhool-designs/database/*": ["./packages/database/src/*"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
}
